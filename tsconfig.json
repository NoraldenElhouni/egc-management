{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",

    "allowJs": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "lib": ["DOM", "ES2020"],
    "jsx": "react-jsx",
    "skipLibCheck": true,
    "strict": true,
    "ignoreDeprecations": "6.0"
  },
  "include": ["src", "src/env.d.ts"],
  "exclude": ["node_modules", "dist"]
}
